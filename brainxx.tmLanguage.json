{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "brainxx",
    "patterns": [
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "include": "#Number"
                },
                {
                    "include": "#Stack"
                },
                {
                    "include": "#Tag"
                },
                {
                    "include": "#Function"
                },
                {
                    "include": "#Control"
                },
                {
                    "include": "#IO"
                },
                {
                    "include": "#Others"
                }
            ]
        },
        "Number": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "(?<=\\${1})[0-9]+"
                }
            ]
        },
        "Stack": {
            "patterns": [
                {
                    "name": "keyword",
                    "match": "[+-]|(\\$([+\\-*/%$#<>|&^~\\[\\]]|=[=<>!]|:[\\^~+\\->]))"
                },
                {
                    "name": "keyword",
                    "match": "\\${1}(?=[0-9]+)"
                }
            ]
        },
        "Tag": {
            "patterns": [
                {
                    "name": "keyword.control",
                    "match": "::[0-9]+"
                },
                {
                    "name": "entity.name.function",
                    "match": ":\\>[0-9]+"
                }
            ]
        },
        "Function": {
            "patterns": [
                {
                    "name": "keyword.control",
                    "match": "#[:~][0-9]+|#\\<"
                },
                {
                    "name": "entity.name.function",
                    "match": "#\\>[0-9]+:[0-9]+"
                }
            ]
        },
        "Control": {
            "patterns": [
                {
                    "name": "keyword.control",
                    "match": "[<>\\[\\]\\@]"
                }
            ]
        },
        "IO": {
            "patterns": [
                {
                    "name": "entity.name.function",
                    "match": "[.,]"
                }
            ]
        },
        "Others": {
            "patterns": [
                {
                    "name": "invalid",
                    "match": "\\$[=:]*|:[:>]*|#[:>~]*"
                },
                {
                    "name": "comment",
                    "match": "."
                }
            ]
        }
    },
    "scopeName": "source.brainxx"
}