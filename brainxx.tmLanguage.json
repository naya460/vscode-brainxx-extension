{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "brainxx",
    "patterns": [
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "constant.numeric",
                    "match": "\\$[0-9]+"
                },
                {
                    "name": "keyword",
                    "match": "[+-]|(\\$([+\\-*/%$#<>|&^~\\[\\]]|=[=<>!]|:[\\^~+\\->]))"
                },
                {
                    "name": "entity.name.function",
                    "match": "#\\>[0-9]+:[0-9]+|:\\>[0-9]+"
                },
                {
                    "name": "keyword.control",
                    "match": "[:#]:[0-9]+|#[\\<~]|[<>\\[\\]\\@]"
                },
                {
                    "name": "invalid",
                    "match": "\\$[=:]*|:[:>]*|#[:>~]*"
                }
            ]
        }
    },
    "scopeName": "source.brainxx"
}